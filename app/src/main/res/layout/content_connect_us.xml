<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.passe.se7en.ConnectUs"
    android:background="@drawable/try3"
    tools:showIn="@layout/activity_connect_us">


    <android.support.v7.widget.CardView

        android:id="@+id/menu1"
        android:layout_width="132dp"
        android:layout_height="115dp"

        android:fadingEdge="horizontal"

        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp"
android:onClick="goTOphone"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.323">

        <TextView
            android:id="@+id/textView1632"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"

            android:fontFamily="casual"
            android:text="        Call Us"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView16cc2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"

            android:background="@android:color/transparent"
            app:srcCompat="@drawable/callusx2" />
    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView

        android:id="@+id/menu2"
        android:layout_width="132dp"
        android:layout_height="115dp"
        android:layout_marginBottom="8dp"
android:onClick="goTOFB"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        android:layout_marginTop="8dp"
        android:fadingEdge="horizontal"


        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.323"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Avaliable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"

            android:fontFamily="casual"
            android:text="   Facebook Page"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView16fd"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_gravity="center_horizontal"

            android:background="@android:color/transparent"
            app:srcCompat="@drawable/fbpage" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/kd2"
        android:layout_width="132dp"
        android:layout_height="115dp"

        android:layout_marginTop="295dp"
        android:fadingEdge="horizontal"
        android:onClick="goToContact2"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="7dp"

        app:cardElevation="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView162"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"

            android:fontFamily="casual"
            android:text="        Location"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView162"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"

            android:background="@android:color/transparent"
            app:srcCompat="@drawable/loc2" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
