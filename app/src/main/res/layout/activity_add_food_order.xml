<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.passe.se7en.AddFoodOrder">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="?attr/actionBarSize"
            android:title="Order Item"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Order Item" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_anchor="@+id/include8"
        app:layout_anchorGravity="bottom|left"
        app:srcCompat="?android:attr/homeAsUpIndicator" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/order"
        android:layout_width="76dp"
        android:layout_height="66dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="@dimen/fab_margin"
        android:onClick="orderItem_clicked"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_anchor="@+id/include8"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:srcCompat="@drawable/ok1" />

    <include
        android:id="@+id/include8"
        layout="@layout/content_add_food_order" />

</android.support.design.widget.CoordinatorLayout>
